<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp"
            tools:context=".ui.login.view.LoginActivity">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/register_img_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_icon" />

            <TextView
                style="@style/Theme.AppInstagram.TextViewBase.Form"
                android:layout_gravity="center_horizontal"
                android:text="@string/photo_register_title"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                style="@style/Theme.AppInstagram.TextViewBase.Form"
                android:layout_gravity="center_horizontal"
                android:text="@string/photo_register_subtitle"
                android:layout_marginStart="36sp"
                android:layout_marginEnd="36sp"
                android:textColor="@color/black" />

            <br.com.multalpha.aplicativos.v1.appinstagram.util.LoadingButton
                android:id="@+id/register_btn_add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/add_photo" />

            <Button
                android:id="@+id/register_btn_jump"
                android:text="@string/jump"
                style="@style/Theme.AppInstagram.Link" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>